{
  "name": "minipp",
  "version": "0.0.12",
  "description": "A tool for generating dependency trees for frontend projects, capable of creating visual dependency graphs and detailed JSON reports.",
  "bin": {
    "minipp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm clean && tsc",
    "dev": "tsx src/index.ts",
    "start": "node ./dist/index.js",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "release": "pnpm build && changelogen --release && npm publish && git push --follow-tags"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.24",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "changelogen": "^0.6.1",
    "eslint": "^8.57.0",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "glob": "^11.0.2",
    "tsconfig-paths": "^4.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
